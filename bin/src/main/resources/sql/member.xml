<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Members">
	<!-- 
	<select id="idcheck" parameterType="String" resultType="Member">
		select *
		from portfordev.MEMBER
		where MEMBER_ID = #{inputid}
	</select>
	 -->
	 <select id="idcheck" parameterType="String" resultType="Member">
		select *
		from MEMBER
		where MEMBER_ID = #{inputid}
	</select>
	<select id="get_member" parameterType="String" resultType="Member">
		select MEMBER_ID, MEMBER_NAME, MEMBER_ACT
		from MEMBER
		where MEMBER_ID = #{inputid}
	</select>
	<insert id="insert" parameterType="Member">
		insert into MEMBER values(#{MEMBER_ID}, #{MEMBER_PASSWORD}, #{MEMBER_NAME},
		#{MEMBER_POWER}, #{MEMBER_POINT}, #{MEMBER_ACT})
	</insert>
	
	 <select id="testidcheck" parameterType="String" resultType="MyBatisTestVO2">
		select *
		from member_test3
		where num = #{inputid}
	</select>
	
	<insert id="inserttest" parameterType="MyBatisTestVO2">
		insert into member_test3 
		values(
			(select nvl(max(num),0)+1 from member_test3), 
			#{name}, #{email}, #{tel}, #{addr}, sysdate
		)
	</insert>
	<select id ="selectAll" resultType="MyBatisTestVO2">
		select * from member_test3
	</select>
	<insert id = "registerDept" parameterType = "map">
		INSERT INTO DEPT
		VALUES(#{deptno}, #{dname}, #{loc})
	</insert>
	
	<select id ="get_name" resultType="String" parameterType="String">
		select MEMBER_NAME from MEMBER where MEMBER_ID=#{id}
	</select>
	<update id ="add_write_act" parameterType="Map">
		update MEMBER set MEMBER_ACT = MEMBER_ACT + #{POINT} where MEMBER_ID = #{MEMBER_ID}
	</update>
	<update id ="add_receive_act" parameterType="Map">
		update (select * from MEMBER inner join BOARD using(MEMBER_ID) where board_id = #{BOARD_ID}) set MEMBER_ACT = MEMBER_ACT + #{POINT}
	</update>
</mapper>